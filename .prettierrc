{
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
  "singleQuote": true,
  "bracketSpacing": false,
  "tailwindConfig": "website/tailwind.config.ts",
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    },
    {
      "files": "*.svx",
      "options": {
        "parser": "markdown"
      }
    }
  ]
}
