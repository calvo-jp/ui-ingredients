{
  "name": "ui-ingredients-plugin-tailwindcss",
  "type": "module",
  "license": "MIT",
  "version": "0.0.5",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist"
  ],
  "author": {
    "name": "John Paul Calvo",
    "email": "calvojp92@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/calvo-jp/ui-ingredients.git",
    "directory": "packages/tailwindcss"
  },
  "bugs": {
    "url": "https://github.com/calvo-jp/ui-ingredients/issues",
    "email": "calvojp92@gmail.com"
  },
  "description": "TailwindCSS plugin for styling UI Ingredients components using their data attributes",
  "keywords": [
    "TailwindCSS",
    "UI Ingredients",
    "Plugin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "release": "release-it",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "tailwindcss-plugin-zag": "^0.0.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "clean-package": "^2.2.0",
    "release-it": "^17.11.0",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${npm.name} v${version}",
      "tagName": "${npm.name}@${version}"
    },
    "github": {
      "release": false
    },
    "hooks": {
      "after:bump": [
        "pnpm build"
      ]
    }
  },
  "clean-package": {
    "replace": {
      "main": "./dist/index.cjs",
      "module": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "exports": {
        ".": {
          "types": "./dist/index.d.ts",
          "import": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
          },
          "require": "./dist/index.cjs"
        },
        "./package.json": "./package.json"
      }
    }
  }
}
