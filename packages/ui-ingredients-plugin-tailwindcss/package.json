{
  "name": "ui-ingredients-plugin-tailwindcss",
  "type": "module",
  "license": "MIT",
  "version": "0.0.9",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "author": {
    "name": "John Paul Calvo",
    "email": "calvojp92@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/calvo-jp/ui-ingredients.git",
    "directory": "packages/ui-ingredients-plugin-tailwindcss"
  },
  "bugs": {
    "url": "https://github.com/calvo-jp/ui-ingredients/issues",
    "email": "calvojp92@gmail.com"
  },
  "description": "TailwindCSS plugin for styling UI Ingredients components using their data attributes",
  "keywords": [
    "TailwindCSS",
    "UI Ingredients",
    "Plugin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "vitest",
    "build": "tsup",
    "release": "release-it"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "postcss": "^8.5.3",
    "release-it": "^18.1.2",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "peerDependencies": {
    "tailwindcss": "^3.3.3 || ^4.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${npm.name} v${version}",
      "tagName": "${npm.name}@${version}"
    },
    "github": {
      "release": false
    },
    "hooks": {
      "before:init": [
        "pnpm test"
      ],
      "after:bump": [
        "pnpm build"
      ]
    }
  }
}
